QLabel#SideMenuItemIcon {
    padding: 4px 0;
}
QFrame#InfoCard {
    border: 1px solid #444;
    border-radius: 6px;
    background: #f0f0f0;
    padding: 6px;
    min-width: 200px;
    max-width: 250px;
}
QFrame#InfoCardWide {
    border: 1px solid #444;
    border-radius: 6px;
    background: #f0f0f0;
    padding: 8px;
    min-width: 300px;
    max-width: 420px;
}

QPushButton#DialogNeutralButton {
    background-color: #bdc3c7;
    color: #2c3e50;
    border: none;
    border-radius: 4px;
    padding: 4px 12px;
}

QPushButton#DialogPositiveButton {
    background-color: #27ae60;
    color: #ffffff;
    border: none;
    border-radius: 4px;
    padding: 4px 12px;
}

QPushButton#DialogNegativeButton {
    background-color: #e74c3c;
    color: #ffffff;
    border: none;
    border-radius: 4px;
    padding: 4px 12px;
}

QPushButton#ReturnButton {
    background-color: #1e90ff;
    color: white;
    border: none;
    border-radius: 6px;
    padding: 6px 14px;
    /*margin-top: 6px;*/
    font-size: 12px;
    font-weight: 600;
}

QPushButton#ReturnButton:hover {
    background-color: #1874d2;
}

QPushButton#ReturnButton:disabled {
    background-color: #8fbaf0;
    color: #f4f4f4;
}

QPushButton#SecondaryButton {
    background-color: #e67e22;
    color: white;
    border: none;
    border-radius: 6px;
    padding: 6px 14px;
    font-size: 10px;
    font-weight: 600;
}

QPushButton#SecondaryButton:hover {
    background-color: #d35400;
}

QPushButton#CheckoutButton {
    background-color: #27ae60;
    color: white;
    border: none;
    border-radius: 4px;
    padding: 4px 10px;
    margin-top: 8px;
}

QPushButton#CheckoutButton:hover {
    background-color: #1f8a4c;
}

QPushButton#CheckoutButton:disabled {
    background-color: #9bd6b4;
    color: #f4f4f4;
}
QFrame#HistoryCard {

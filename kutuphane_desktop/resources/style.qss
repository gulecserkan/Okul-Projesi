/* login ekranÄ± iÃ§in ekstra boÅŸluk */
QWidget {
    background-color: #f5f6fa;
    font-family: "Segoe UI";
    font-size: 11pt;
}

QLabel {
    font-family: "Noto Sans", "Noto Color Emoji", sans-serif;
    margin-bottom: 10px;
}

QLineEdit {
    border: 1px solid #ccc;
    border-radius: 8px;
    padding: 6px;
    background: #ffffff;
}

QLineEdit:focus {
    border: 1px solid #0078d7;
    background: #eaf4ff;
}

QPushButton#loginButton {
    background-color: #0078d7;
    color: white;
    border-radius: 8px;
    padding: 8px;
    font-weight: bold;
}

QPushButton#loginButton:hover {
    background-color: #005a9e;
}

QMainWindow {
    background-color: #f7f7f7;
}

QLabel#TitleLabel {
    font-size: 20px;
    font-weight: bold;
    color: #333333;
    padding: 10px;
}

QPushButton {
    background-color: #4CAF50;
    color: white;
    border-radius: 6px;
    padding: 6px 12px;
    font-size: 14px;
}

QPushButton:hover {
    background-color: #45a049;
}

QTableView {
    background-color: white;
    gridline-color: #dcdcdc;
    font-size: 13px;
    selection-background-color: #cce5ff;
    alternate-background-color: #f9f9f9;
}

QHeaderView::section {
    background-color: #eaeaea;
    padding: 6px;
    font-weight: bold;
    border: 1px solid #dcdcdc;
}

QLineEdit#QuickInput {
    border: 2px solid #0078D7;
    border-radius: 15px;
    padding: 8px 12px;
    font-size: 15px;
    background: #f1f1f1;
    color: #333;
}

QLineEdit#QuickInput:focus {
    border: 2px solid #005A9E;
    background: #ffffff;
}

QToolButton#HamburgerButton {
    border: none;
    background: transparent;
    font-size: 20px;
    padding: 4px 8px;
}

QToolButton#HamburgerButton:hover {
    background: rgba(0, 0, 0, 0.05);
    border-radius: 6px;
}

QWidget#SideMenu {
    background-color: #070a12; /* Ã§ok daha koyu lacivert/fÃ¼me */
    border-right: 1px solid #000814;
}

QFrame#SideMenuItem {
    background-color: transparent;
    border-radius: 14px;
}

/* Hover: opak renkle vurgula (yarÄ± saydam deÄŸil) */
QFrame#SideMenuItem[hover="true"] {
    background-color: #1f2b3a;
}
QFrame#SideMenuItem:hover {
    background-color: #1f2b3a;
}
QFrame#SideMenuItem:hover QLabel#SideMenuItemTitle { color: #ffffff; }
QFrame#SideMenuItem:hover QLabel#SideMenuItemDesc { color: #cdd3de; }

/* MenÃ¼ Ã¶ÄŸesi iÃ§indeki tÃ¼m etiketlerin arka planÄ± ÅŸeffaf olsun */
QFrame#SideMenuItem QLabel {
    background-color: transparent;
    border: none;
}

QLabel#SideMenuItemTitle {
    font-size: 17px;
    font-weight: 800;
    color: #f9fafb; /* daha parlak */
    background-color: transparent;
    margin-bottom: 0px; /* global margin'i geÃ§ersiz kÄ±l */
    padding-bottom: 2px;
}

QLabel#SideMenuItemDesc {
